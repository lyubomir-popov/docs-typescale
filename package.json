{
  "name": "docs-typescale",
  "version": "1.0.0",
  "description": "Typography scale and baseline grid system",
  "scripts": {
    "dev": "concurrently \"node scripts/watch.js\" \"live-server --port=3000 --open=/dist/demos/typography-docs.html --entry-file=dist/demos/typography-docs.html --watch=dist\"",
    "watch": "node scripts/watch.js",
    "generate": "npm run generate:docs && npm run generate:editorial",
    "generate:docs": "npx @lyubomir-popov/baseline-nudge-generator generate config/typography-config-docs.json",
    "generate:editorial": "npx @lyubomir-popov/baseline-nudge-generator generate config/typography-config-editorial.json",
    "build:docs": "sass --load-path=node_modules src/docs/main.scss:dist/css/docs.css --style=compressed",
    "build:editorial": "sass --load-path=node_modules src/editorial/main.scss:dist/css/editorial.css --style=compressed",
    "demo:docs": "open dist/demos/typography-docs.html",
    "demo:editorial": "open dist/demos/typography-editorial.html"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "@lyubomir-popov/baseline-nudge-generator": "^1.4.0"
  }
}
